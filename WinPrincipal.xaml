<Window x:Class="WpfApp2P2D.WinPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2P2D"
        mc:Ignorable="d"
        Title="WinPrincipal" Height="350" Width="350"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="E:\Andres Univalle\PROGRAMACION II\ProyectoP2Epsas\imagenes\FondoOscuroEpsas.png"
                Opacity="0.85"/>
        </Grid.Background>
        <Label x:Name="lblBienv" Grid.ColumnSpan="2"
               Content="BIENVENIDO AL SISTEMA"
               Width="250"
               FontSize="20"
               VerticalAlignment="Top" Margin="0,65,0,0"/>
        <Button
            x:Name="btnContinuar" Grid.Row="1" Grid.Column="1"
            Content="CONTINUAR" 
            Click="btnContinuar_Click"/>
        <Button
                x:Name="btnSalir" Grid.Row="1"
                Content="SALIR" Click="btnSalir_Click"/>
    </Grid>
</Window>
