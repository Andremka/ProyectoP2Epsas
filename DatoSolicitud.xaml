<Window x:Class="WpfApp2P2D.DatoSolicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2P2D"
        mc:Ignorable="d"
        Title="DatoSolicitud" Height="800" Width="750"
        >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/FondoOscuroEpsas.png"
                Opacity="0.85"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblGestSolicitud"
               Content="GESTION SOLICTUDES EPSAS"
               FontSize="30"/>

        <StackPanel Grid.Row="1">
            <Label x:Name="lblDatSolicitante"
                   Content="DATOS SOLICITANTE:"
                   HorizontalAlignment="Left"
                   FontSize="15"/>
            <DataGrid Height="70" Width="700" Margin="10"
                      x:Name="dgSolicitudes" Opacity="0.75"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="50"/>
                    <DataGridTextColumn Header="NOMBRE" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>   
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Label x:Name="lblDatInmueble"
                   Content="DATOS SOLICITUD: "
                   HorizontalAlignment="Left"
                   FontSize="15"/>
            <DataGrid Height="70" Width="500" Margin="10"
                      x:Name="dgInmuebles" Opacity="0.75"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="DIRECCION" Width="200"/>
                    <DataGridTextColumn Header="# CASA" Width="50"/>
                    <DataGridTextColumn Header="COORDENADAS" Width="100"/>
                    <DataGridTextColumn Header="TIPO DE INMUBELE" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <Label x:Name="lblDatoServicio"
                   Content="DATOS DEL SERVICIO: "
                   HorizontalAlignment="Left"
                   FontSize="15"/>
            <DataGrid Height="70" Width="500" Margin="10"
                      x:Name="dgDatoServicio" Opacity="0.75"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="TIPO SOLICITUD" Width="150"/>
                    <DataGridTextColumn Header="USO DEL SERVICIO" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <Label x:Name="lblDatosTecnicos"
           Content="DATOS DE LA APROBACION DEL SERVICIO: "
           HorizontalAlignment="Left"
           FontSize="15"/>
            <DataGrid Height="70" Width="500" Margin="10"
              x:Name="dgApServicio" Opacity="0.75"
              AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="TIPO SOLICITUD" Width="150"/>
                    <DataGridTextColumn Header="USO DEL SERVICIO" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5">
            <Button x:Name="btnAgregarSolicitud"
            Content="AGREGAR DATOS"
            Width="200" Margin="160,0,0,0" Click="btnAgregarSolicitud_Click"/>
            <Button x:Name="btnBorrarSolicitud"
            Content="BORRAR DATOS"
            Width="200" Margin="35,0,0,0"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="6">
            <Button x:Name="btnRegresar"
                    Content="REGRESAR" 
                    Margin="120,0,0,0"/>
            <Button x:Name="btnCargarArch"
                    Content="CARGAR ARCHIVO"
                    Width="175" Margin="15,0,0,0"/>
            <Button x:Name="btnGrabarArch"
                    Content="GRABAR ARCHIVO"
                    Width="180" Margin="15,0,0,0"/>
        </StackPanel>
        
    </Grid>
</Window>
