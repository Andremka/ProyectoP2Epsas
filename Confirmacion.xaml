<Window x:Class="WpfApp2P2D.Confirmacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2P2D"
        mc:Ignorable="d"
        Title="Confirmacion" Height="750" Width="400"
        >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="E:\Andres Univalle\PROGRAMACION II\ProyectoP2Epsas\imagenes\FondoOscuroEpsas.png" Opacity="0.9"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="RESUMEN Y CONFIRMACIÓN" 
               HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>

        <Label Grid.Row="1" Grid.ColumnSpan="2" Content="DATOS DEL SOLICITANTE" 
               FontWeight="Bold" Margin="0,10,0,5" FontSize="15"/>

        <Label Grid.Row="2" Content="ID Usuario:" FontSize="12.5"/>
        <Label x:Name="lblResumenIdUsuario" Grid.Row="2" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="3" Content="Nombre Completo:" FontSize="12.5"/>
        <Label x:Name="lblResumenNombre" Grid.Row="3" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="4" Content="Email:" FontSize="12.5"/>
        <Label x:Name="lblResumenEmail" Grid.Row="4" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>


        <Label Grid.Row="5" Grid.ColumnSpan="2" Content="DATOS DE LA SOLICITUD" 
               FontWeight="Bold" Margin="0,10,0,5" FontSize="15"/>

        <Label Grid.Row="6" Content="ID Solicitud:" FontSize="12.5"/>
        <Label x:Name="lblResumenIdSolicitud" Grid.Row="6" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="7" Content="Fecha Emisión:" FontSize="12.5"/>
        <Label x:Name="lblResumenFecha" Grid.Row="7" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="8" Content="Tipo Servicio:" FontSize="12.5"/>
        <Label x:Name="lblResumenTipoServicio" Grid.Row="8" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="9" Content="Prioridad:" FontSize="12.5"/>
        <Label x:Name="lblResumenPrioridad" Grid.Row="9" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>


        <Label Grid.Row="10" Grid.ColumnSpan="2" Content="DATOS DEL INMUEBLE" 
               FontWeight="Bold" Margin="0,10,0,5" FontSize="15"/>

        <Label Grid.Row="11" Content="Nro Medidor:" FontSize="12.5"/>
        <Label x:Name="lblResumenNroMedidor" Grid.Row="11" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="12" Content="Dirección:" FontSize="12.5"/>
        <Label x:Name="lblResumenDireccion" Grid.Row="12" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="13" Content="Categoría:" FontSize="12.5"/>
        <Label x:Name="lblResumenCategoria" Grid.Row="13" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>

        <Label Grid.Row="14" Content="Tipo Inmueble:" FontSize="12.5"/>
        <Label x:Name="lblResumenTipoInmueble" Grid.Row="14" Grid.Column="1" FontWeight="SemiBold" FontSize="12.5"/>


        <StackPanel Grid.Row="15" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnCancelar" 
                    Content="ACTUALIZAR DATOS" 
                    FontSize="12.5"
                    Width="150" Height="30" Margin="10,0"
                    Click="btnCancelar_Click"/>

            <Button x:Name="btnConfirmarEnvio" 
                    Content="CONFIRMAR Y GUARDAR" 
                    FontSize="12.5"
                    Width="180" Height="30" Margin="10,0"
                    Click="btnConfirmarEnvio_Click" FontWeight="Bold"/>
        </StackPanel>

        <Label x:Name="lblMensajes"
               Grid.Row="16"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Foreground="White"
               FontSize="12.5"/>

    </Grid>
</Window>
