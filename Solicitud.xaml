<Window x:Class="WpfApp2P2D.Solicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2P2D"
        mc:Ignorable="d"
        Title="Solicitud" Height="850" Width="700" ResizeMode="NoResize"
        >
    <Grid Margin="1">
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/FondoOscuroEpsas.png"
                        Opacity="0.87"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Label  x:Name="lblSolicitud"
                Content="SOLICITUD DE SERVICIO"
                HorizontalAlignment="Center"
                FontSize="23"/>
        <Label x:Name="lblDatosSolicitante"
               Content="DATOS DEL SOLICITANTE"
               Grid.Row="1"
               HorizontalAlignment="Left"/>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <Label x:Name="lblDatos"
                   Content="ID Usuario:"
                   FontSize="18"/>
            <TextBox x:Name="txtIdUsuario"
                     Width="120"
                     Height="30"/>
            <Label x:Name="lblRol"
                   Content="Rol:"
                   FontSize="18"/>
            <TextBox x:Name="txtRol"
                     Width="150"
                     Height="30"/>
        </StackPanel>
        <Label x:Name="lblDatosInmueble"
               Content="DATOS DE LA SOLICITUD"
               Grid.Row="3"
               HorizontalAlignment="Left"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label x:Name="lblIdSolicitud"
                   Content="ID Solicitud: "
                   FontSize="18"/>
            <TextBox x:Name="txtIdSolicitud"
                     Width="120"
                     Height="30"/>
            <Label x:Name="lblTipoServ"
                  Content="Tipo Servicio: "
                   FontSize="18"/>
            <TextBox x:Name="txtTipoServ"
                     Width="150"
                     Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Label x:Name="lblFechSol"
                   Content="Fecha Solicitud: "
                   FontSize="18"/>
            <TextBox x:Name="txtFechaSolicitud"
                     Width="120"
                     Height="30"/>
            <Label x:Name="lblFechaApRech"
                   Content="Fecha Aprobacion - Rechazo:"
                   FontSize="18"/>
            <TextBox x:Name="txtFechApRech"
                     Width="110"
                     Height="30"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <Label x:Name="lblEstado"
                    Content="Estado:"
                    FontSize="18"/>
            <TextBox x:Name="txtEstado"
                      Width="120"
                      Height="30"/>
            <Label x:Name="lblObservacion"
                   Content="Observaciones: "
                   FontSize="18"/>
            <TextBox x:Name="txtObservacion"
                     Width="300"
                     Height="30"/>
        </StackPanel>
        <Label x:Name="lblDatosTecnicos"
               Content="DATOS DEL SERVICIO"
               Grid.Row="7"
               HorizontalAlignment="Left"/>
        <StackPanel Grid.Row="8" Orientation="Horizontal">
            <Label x:Name="lblDireccion"
                    Content="Direccion:"
                   FontSize="18"/>
            <TextBox x:Name="txtDireccion"
                     Height="30"
                     Width="200"/>
            <Label x:Name="lblNroMedidor"
                    Content="Nro Medidor:"
                   FontSize="18"/>
            <TextBox x:Name="txtNroMedidor"
                      Height="30"
                      Width="100"/>
        </StackPanel>
        <StackPanel Grid.Row="9" Orientation="Horizontal">
            <Label x:Name="lblTipoInmueble"
            Content="Tipo Inmueble:"
           FontSize="18"/>
            <TextBox x:Name="txtTipoInmuble"
             Height="30"
             Width="200"/>
            <Label x:Name="lblAreaTerreno"
            Content="Area Terreno (M^2):"
           FontSize="18"/>
            <TextBox x:Name="txtAreaTerreno"
              Height="30"
              Width="100"/>
        </StackPanel>
        <Label x:Name="lblAprobacion"
               Content="DATOS DE LA APROBACION DEL SERVICIO:"
               Grid.Row="10"
               HorizontalAlignment="Left"/>
        <StackPanel Grid.Row="11" Orientation="Horizontal">
            <Label x:Name="lblIdAprobacion"
            Content="ID Aprobacion:"
           FontSize="18"/>
            <TextBox x:Name="txtAprobacion"
             Height="30"
             Width="120"/>
            <Label x:Name="lblFechaRev"
            Content="Fecha Revision:"
           FontSize="18"/>
            <TextBox x:Name="txtFechaRevision"
              Height="30"
              Width="100"/>
        </StackPanel>
        <StackPanel Grid.Row="12" Orientation="Horizontal">
            <Label x:Name="lblDesicionFinal"
                    Content="Desicion Final:"
                   FontSize="18"/>
            <TextBox x:Name="txtDescisionFinal"
                     Height="30"
                     Width="120"/>
            <Label x:Name="lblMotvDesicion"
                    Content="Motivo Desicion:"
                   FontSize="18"/>
            <TextBox x:Name="txtMotvDesicion"
                      Height="30"
                      Width="100"/>
        </StackPanel>
        <StackPanel Grid.Row="13" Orientation="Horizontal">
            <Button x:Name="btnRegSolicitud"
                    Content="REGRESAR" Margin="110,0,5,0" Click="btnRegSolicitud_Click"/>
            <Button x:Name="btnClear"
                    Content="LIMPIAR"
                     Click="btnClear_Click" Margin="50,0,5,0"/>
            <Button x:Name="btnContinuar"
                    Content="CONTINUAR"
                    Margin="55,0,0,0" Click="btnContinuar_Click"/>
        </StackPanel>
    </Grid>
</Window>
