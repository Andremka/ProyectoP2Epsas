<Window x:Class="WpfApp2P2D.Solicitud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2P2D"
        mc:Ignorable="d"
        Title="Solicitud" Height="700" Width="400" ResizeMode="NoResize"
        >
    <Grid Margin="1">
        <Grid.Background>
            <ImageBrush ImageSource="E:\Andres Univalle\PROGRAMACION II\ProyectoP2Epsas\imagenes\FondoOscuroEpsas.png"
                        Opacity="0.87"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label  x:Name="lblSolicitud"
                Grid.ColumnSpan="2"
                Content="SOLICITUD DE SERVICIO EPSAS"
                HorizontalAlignment="Center"
                FontSize="15"/>
        <Label x:Name="lblDatosSolicitante"
               Content="DATOS DEL SOLICITANTE"
               Grid.Row="1"
               HorizontalAlignment="Left" FontSize="11.5"/>

        <Label x:Name="lblIdUsuario"
               Grid.Row="2"
               Content="ID USUARIO:"
               FontSize="11"/>
        <TextBox x:Name="txtIdUsuario"
                 Grid.Column="1" Grid.Row="2"
                 FontSize="11"/>

        <Label x:Name="lblDatosInmueble"
               Content="DATOS DE LA SOLICITUD"
               Grid.Row="3"
               HorizontalAlignment="Left" FontSize="11.5"/>
    
        <Label x:Name="lblIdSolicitud"
               Content="ID SOLICITUD: "
               Grid.Row="4" FontSize="11"/>
        <TextBox x:Name="txtIdSolicitud"
                 Grid.Row="4" Grid.Column="1" FontSize="11"/>
        <Label x:Name="lblFechaEmision"
                   Content="FECHA EMISION: "
                   Grid.Row="5" FontSize="11"/>
        <TextBox x:Name="txtFechaEmision"
                 Grid.Row="5" Grid.Column="1" FontSize="11"/>
        <Label x:Name="lblEstado"
               Content="ESTADO: "
               Grid.Row="6" FontSize="11"/>
        <TextBox x:Name="txtEstado"
                 Grid.Column="1" Grid.Row="6" FontSize="11"/>
        <Label x:Name="lblTipoServicio"
               Content="TIPO SERVICIO:"
               Grid.Row="7" FontSize="11"/>
        <TextBox x:Name="txtTipoServicio"
                 Grid.Row="7" Grid.Column="1" FontSize="11"/>
        <Label x:Name="lblPrioridad"
               Content="PRIORIDAD: "
               Grid.Row="8" FontSize="11"/>
        <TextBox x:Name="txtPrioridad"
                 Grid.Column="1" Grid.Row="8" FontSize="11"/>

        <Label x:Name="lblDatosTecnicos"
               Content="DATOS DEL INMUEBLE"
               Grid.Row="9"
               HorizontalAlignment="Left" FontSize="11.5"/>

        <Label x:Name="lblNroMedidor"
               Content="NRO MEDIDOR:"
               Grid.Row="10" FontSize="11"/>
        <TextBox x:Name="txtNroMedidor"
                 Grid.Row="10" Grid.Column="1" FontSize="11"/>
        <Label x:Name="lblDireccion"
               Content="DIRECCION:"
               Grid.Row="11" FontSize="11"/>
        <TextBox x:Name="txtDireccion"
               Grid.Row="11" Grid.Column="1" FontSize="11"/>
        <Label x:Name="lblCategoria"
                   Content="CATEGORIA:"
                   Grid.Row="12" FontSize="11"/>
        <TextBox x:Name="txtCategoria"
                      Grid.Row="12" Grid.Column="1" FontSize="11"/>
        <Label x:Name="lblTipoInmueble"
               Content="TIPO INMUEBLE:"
               Grid.Row="13" FontSize="11"/>
        <TextBox x:Name="txtTipoInmueble"
                 Grid.Row="13" Grid.Column="1" FontSize="11"/>

        <StackPanel Grid.Row="14" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button x:Name="btnRegSolicitud" Height="30" Width="90"
                    Content="REGRESAR" Margin="30,0,5,0" Click="btnRegSolicitud_Click" FontSize="12.5" Cursor=""/>
            <Button x:Name="btnClear" Width="90"
                    Content="LIMPIAR"
                     Click="btnClear_Click" Margin="25,0,5,0" FontSize="12.5" Height="30"/>
            <Button x:Name="btnContinuar" Width="90"
                    Content="CONTINUAR"
                    Margin="25,0,0,0" Click="btnContinuar_Click" FontSize="12.5"
                    Height="30"/>
        </StackPanel>
        <Label x:Name="lblMensajes"
               Grid.Row="15"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Foreground="White"
               FontSize="11"/>
    </Grid>
</Window>
